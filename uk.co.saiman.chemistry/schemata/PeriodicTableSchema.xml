<?xml version="1.0" ?>
<schema
	xmlns="http://modabi.strangeskies.co.uk/2014-01-01/"
	xmlns:sai="http://saiman.co.uk/2015-10-08/"
	name="sai:PeriodicTableSchema">

	<imports>
		uk.co.strangeskies.reflection.TypeToken.Infer,
		java.util.Collection,
		java.util.List,
		uk.co.saiman.chemistry.Element.Group,
		uk.co.saiman.chemistry.PeriodicTable,
		uk.co.saiman.chemistry.Element,
		uk.co.saiman.chemistry.isotope.Isotope
	</imports>

	<dependencies>
		BaseSchema
	</dependencies>

	<types />

	<models>
		<model
			name="sai:isotope"
			dataType="Isotope"
			bindingStrategy="CONSTRUCTOR">

			<inputSequence name="sai:constructor">
				<property
					name="sai:massNumber"
					type="int" />

				<property
					name="sai:mass"
					type="double" />

				<property
					name="sai:abundance"
					type="double" />
			</inputSequence>
		</model>

		<model
			name="sai:element"
			dataType="Element"
			bindingStrategy="CONSTRUCTOR">

			<inputSequence name="sai:constructor">
				<property
					name="sai:atomicNumber"
					type="int" />

				<property
					name="sai:name"
					type="string"
					occurrences="0..1" />

				<property
					name="sai:symbol"
					type="string" />

				<inline
					name="sai:isotopeList"
					outMethod="getIsotopes"
					dataType="@Infer Collection&lt;?&gt;"
					bindingType="@Infer List&lt;?&gt;">

					<complex
						baseModel="sai:isotope"
						outMethod="this"
						occurrences="0.."
						inMethod="add" />
				</inline>

				<property
					name="sai:group"
					dataType="Group"
					type="enum" />
			</inputSequence>
		</model>

		<model
			name="sai:periodicTable"
			dataType="PeriodicTable"
			bindingStrategy="CONSTRUCTOR">

			<inputSequence name="sai:constructor">
				<property
					name="sai:name"
					type="string" />

				<inline
					name="sai:elementList"
					outMethod="getElements"
					dataType="@Infer Collection&lt;?&gt;"
					bindingType="@Infer List&lt;?&gt;">

					<complex
						baseModel="sai:element"
						outMethod="this"
						occurrences="0.."
						inMethod="add" />
				</inline>
			</inputSequence>
		</model>
	</models>
</schema>
